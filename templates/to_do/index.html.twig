{% extends 'base.html.twig' %}

{% block title %}Hello ToDoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

{% for message in app.flashes('NotInit') %}
<div class='alert alert-danger'>
 <p> {{message}}</p> 
 </div>
{% endfor %}
{% for message in app.flashes('init') %}
    <div class='alert alert-success'>
        <p>{{message}}</p>
        </div>

{% endfor %}
{% for message in app.flashes('errorDelete') %}
    <div class='alert alert-danger'>
 <p> {{message}}</p> 
 </div>
{% endfor %}
{% for message in app.flashes('successDelete') %}
    <div class='alert alert-success'>
 <p> {{message}}</p> 
 </div>
 {% endfor %}
 {% for message in app.flashes('successReset') %}
    <div class='alert alert-success'>
 <p> {{message}}</p> 
 </div>
{% endfor %}
<h1> ToDo List </h1>
<ol>
 {% for day,todo in app.session.get('todos')%}
    <li>  <strong>{{day}} </strong> : {{todo}} </li>
  {% endfor %}  

</div>

{% endblock %}
